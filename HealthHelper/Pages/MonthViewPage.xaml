<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthHelper.Pages.MonthViewPage"
             Title="Month Overview">
    <Grid Padding="24">
        <VerticalStackLayout Spacing="16" HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="Month view"
                   Style="{StaticResource Headline}" />
            <Label Text="Historical month insights coming soon."
                   Style="{StaticResource Body1}"
                   HorizontalTextAlignment="Center" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
