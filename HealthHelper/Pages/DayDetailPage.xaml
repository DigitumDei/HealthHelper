<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthHelper.Pages.DayDetailPage"
             Title="Day Details">
    <Grid Padding="24">
        <VerticalStackLayout Spacing="16" HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="Day detail"
                   Style="{StaticResource Headline}" />
            <Label x:Name="DateLabel"
                   Style="{StaticResource Body1}"
                   HorizontalTextAlignment="Center" />
            <Label Text="Detailed entries will appear here once implemented."
                   Style="{StaticResource Caption1}"
                   HorizontalTextAlignment="Center" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
