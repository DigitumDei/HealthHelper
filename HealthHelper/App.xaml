<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HealthHelper"
             xmlns:converters="clr-namespace:HealthHelper.Converters"
             x:Class="HealthHelper.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/AppStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:IsProcessingConverter x:Key="IsProcessingConverter" />
            <converters:IsFailedConverter x:Key="IsFailedConverter" />
            <converters:IsSkippedConverter x:Key="IsSkippedConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
